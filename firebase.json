{
  "hosting": {
    "public": "scripts",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "port": 8085
    },
    "hosting": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 8081
    },
    "singleProjectMode": true
  }
}
